<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
  <changeSet id="1" author="yourname">
    <createTable tableName="address">
      <column name="id" type="bigint" autoIncrement="${autoIncrement}">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="city" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="country" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="province" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="line1" type="varchar(255)">
        <constraints nullable="false"/>
      </column>
      <column name="line2" type="varchar(255)"/>
    </createTable>
  </changeSet>
  <changeSet id="2" author="yourname">
    <createTable tableName="foodie">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="main_city_uuid" type="uuid">
        <constraints nullable="true"/>
      </column>
      <column name="address_id" type="bigint">
        <constraints nullable="false" foreignKeyName="fk_foodie_address" references="address(id)"/>
      </column>
    </createTable>
  </changeSet>
  <changeSet id="3" author="yourname">
    <createTable tableName="restaurant">
      <column name="id" type="bigint" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="main_city_uuid" type="uuid">
        <constraints nullable="false"/>
      </column>
      <column name="restaurant_ordinal" type="int">
        <constraints nullable="false"/>
      </column>
      <column name="address_id" type="bigint">
        <constraints nullable="false" foreignKeyName="fk_restaurant_address" references="address(id)"/>
      </column>
      <!-- Relationships like ratings, tags, connected restaurants, and users are typically managed
           through join tables or other relationship mechanisms in the database -->
    </createTable>
    <!-- Additional changesets to create join tables or other structures needed for the remaining relationships -->
  </changeSet>
</databaseChangeLog>